    <script>
        var myApp = new function () {
            this.printTable = function () {
                var tab = document.getElementById('productTable');
                var win = window.open('', '', 'height=700,width=700');
                win.document.write(tab.outerHTML);
                win.document.close();
                win.print();
            }
        }
        onDeleteProduct = (value) => {
            swal({
                title: "Cảnh báo",
                text: "Bạn có muốn xoá sản phẩm này?",
                buttons: ["Hủy", "OK"]
            }).then((result) => {
                if (result) {
                    fetch(`products/delete/${value}`, {
                        method: 'DELETE',
                        headers: {
                            'Content-Type': 'application/json',
                            // You may include additional headers if needed
                        },
                    })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Xoá không thành công');
                            }
                            window.location.href = "/admin/products";
                        })
                        .then(data => {
                            // Handle success if needed
                        })
                        .catch(error => {
                            console.error('Error:', error);
                        });
                }
            });
        };

    </script>
