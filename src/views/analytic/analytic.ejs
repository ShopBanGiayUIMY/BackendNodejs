                    <th>Sản phẩm</th>
                    <th>Thanh toán</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th>Ngày đặt</th>
                  </tr>
                </thead>
                <tbody>

                  <% data.orders.forEach(order=> { %>
                    <tr>
                      <td>
                        <a href="#" style="text-decoration: underline;"> #<%= order.id %> </a>
                      </td>
                      <td>
                        <%= order.User.username %> - <%= order.User.full_name %>
                      </td>


                      <td>
                        <% order.OrderDetails.forEach(orderDetail=> { %>
                          <img src="<%= orderDetail.ProductDetail.Product.thumbnail %>" alt="product thumbnail"
                            class="thumbnail">
                          <b>
                            <%= orderDetail.ProductDetail.Product.product_name%>
                          </b>
                          <br>
                          cỡ
                          <b>
                            <%= orderDetail.ProductDetail.size %>
                          </b>
                          màu
                          <b>
                            <%= orderDetail.ProductDetail.color %>
                          </b>
                          số lượng
                          <b>
                            <%= orderDetail.quantity %>
                          </b>
                          giá bán
                          <i>
                            <%= (+orderDetail.price).toLocaleString('en-US') %>đ
                          </i>
                          thành tiền
                          <b>
                            <%= (orderDetail.price*orderDetail.quantity).toLocaleString('en-US') %>đ
                          </b>
                          <br>
                          <% }); %>
                      </td>
                      <td>
                        <%= order.PaymentMethodType.paymentMethodName %>
                      </td>
                      <td>
                        <%= order.OrderStatus.name %>
                      </td>
                      <td>
                        <b>
                          <%= (+order.totalAmount).toLocaleString('en-US') %>đ
                        </b>
                      </td>
                      <td>

                        <%= order.orderDate.toLocaleString('en-US', { timeZone: 'Asia/Bangkok' }); %>
                      </td>
                    </tr>
                    <% }); %>

                </tbody>

